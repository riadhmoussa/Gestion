<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/tags_ll"
            android:paddingVertical="15dp"
            android:paddingStart="24dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/selected_tag"
                android:layout_width="30dp"
                android:layout_alignParentStart="true"
                android:layout_height="30dp"
                android:button="@drawable/custom_checkbox"/>

            <TextView
                android:id="@+id/tag_name_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingEnd="40dp"
                android:textDirection="locale"
                android:textAlignment="viewStart"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/roboto_regular"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/selected_tag"
                android:textSize="14sp"
                android:text="Tag 1"/>
            <ImageView
                android:id="@+id/close_subTags_img"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:padding="7dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="22dp"
                android:layout_toEndOf="@+id/tag_name_txt"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_close_list" />

        </LinearLayout>



    </RelativeLayout>



</RelativeLayout>