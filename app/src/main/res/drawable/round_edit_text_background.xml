<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <padding android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#00CCCCCC" />
            <corners android:radius="148dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <padding android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <solid android:color="#10CCCCCC" />
            <corners android:radius="148dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <solid android:color="#20CCCCCC" />
            <corners android:radius="148dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <padding android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <solid android:color="@color/bleu_transparant" />
            <corners android:radius="148dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <!--make a gradient background-->
            <gradient
                android:type="linear"
                android:startColor="@color/bleu_transparant"
                android:endColor="@color/bleu_transparant"
                android:angle="180"
                android:gradientRadius="90"
                />
            <stroke android:width="1dp" android:color="@color/bleu_transparant"/>
            <!--apply a border around button-->

            <!-- make the button corners rounded-->
            <corners android:radius="148dp"/>
        </shape>
    </item>
</layer-list>