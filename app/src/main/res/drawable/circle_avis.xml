<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <size
                android:width="87dp"
                android:height="87dp"/>
            <solid
                android:color="@color/white"/>
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>
            <stroke
                android:width="3dp"
                android:color="@color/colorPrimary"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@color/colorPrimary"/>

            <size
                android:width="71dp"
                android:height="71dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimary"/>
        </shape>

    </item>
</layer-list>